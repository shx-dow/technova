---
import BaseLayout from "../layouts/baseLayout.astro";

// Placeholder sponsor data
const sponsorTiers = [
  {
    name: "Title Sponsor",
    sponsors: [{ name: "Title Sponsor" }],
  },
  {
    name: "Partner tier 1",
    sponsors: [
      { name: "Name 1" },
      { name: "Name 2" },
    ],
  },
  {
    name: "Partner tier 2",
    sponsors: [
      { name: "Name 1" },
      { name: "Name 2" },
      { name: "Name 3" },
    ],
  },
  {
    name: "Partner tier 3",
    sponsors: [
      { name: "Name 1" },
      { name: "Name 2" },
      { name: "Name 3" },
      { name: "Name 4" },
    ],
  },
];
---

<BaseLayout title="Sponsors | TechNova 2026">
  <!-- Page Header -->
  <header class="page-header">
    <div class="container-editorial">
      <p class="page-label">Our Partners</p>
      <h1 class="page-title">Sponsors & Partners</h1>
      <p class="page-description">
        TechNova is made possible by the generous support of our sponsors who share our vision of fostering innovation.
      </p>
    </div>
  </header>

  <!-- Current Sponsors -->
  <section class="section">
    <div class="container-editorial">
      {sponsorTiers.map((tier) => (
        <div class="sponsor-tier">
          <h2 class="tier-label">{tier.name}</h2>
          <div class={`sponsor-grid sponsor-grid-${tier.sponsors.length === 1 ? 'single' : tier.sponsors.length <= 3 ? 'few' : 'many'}`}>
            {tier.sponsors.map((sponsor) => (
              <div class="sponsor-card">
                <div class="sponsor-logo-placeholder">
                  <span>Logo</span>
                </div>
                <p class="sponsor-name">{sponsor.name}</p>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
    <h2 class="thank-you">Thank You to all our sponsors!</h2>
  </section>
</BaseLayout>

<style>
  /* Page Header */
  .page-header {
    padding: 8rem 1.5rem 3rem;
  }

  .page-label {
    font-size: 0.6875rem;
    font-weight: 500;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--color-accent-editorial);
    margin-bottom: 1rem;
  }

  .page-title {
    font-size: clamp(2.5rem, 6vw, 3.5rem);
    font-weight: 600;
    letter-spacing: -0.02em;
    margin-bottom: 1rem;
  }

  .page-description {
    font-size: 1.0625rem;
    color: var(--color-text-muted);
    max-width: 540px;
    line-height: 1.6;
  }

  /* Section */
  .section {
    padding: 3rem 1.5rem;
  }

  .section-header {
    margin-bottom: 2.5rem;
  }

  .section-title {
    font-size: 1.75rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .section-description {
    font-size: 1rem;
    color: var(--color-text-muted);
  }

  .section-label {
    font-size: 0.6875rem;
    font-weight: 500;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--color-text-dim);
    margin-bottom: 1.5rem;
  }

  /* Sponsor Tiers */
  .sponsor-tier {
    margin-bottom: 4rem;
  }

  .tier-label {
    font-size: 0.6875rem;
    font-weight: 500;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--color-text-dim);
    margin-bottom: 1.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--color-border);
  }

  .sponsor-grid {
    display: grid;
    gap: 1rem;
  }

  .sponsor-grid-single {
    max-width: 320px;
  }

  .sponsor-grid-few {
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    max-width: 680px;
  }

  .sponsor-grid-many {
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
  }

  .sponsor-card {
    padding: 2rem 1.5rem;
    border: 1px solid var(--color-border);
    text-align: center;
    transition: border-color 0.2s ease;
  }

  .sponsor-card:hover {
    border-color: var(--color-border-hover);
  }

  .sponsor-logo-placeholder {
    width: 80px;
    height: 48px;
    margin: 0 auto 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-surface);
    font-size: 0.625rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-text-dim);
  }

  .sponsor-name {
    font-size: 0.8125rem;
    color: var(--color-text-muted);
  }

  .thank-you {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
  }
</style>
