---
import BaseLayout from "../layouts/baseLayout.astro";

// Placeholder team data
const coreTeam = [
  { name: "Team Member", role: "Convenor", department: "CSE", initials: "TM" },
  { name: "Team Member", role: "Co-Convenor", department: "IT", initials: "TM" },
  { name: "Team Member", role: "Technical Head", department: "CSE", initials: "TM" },
  { name: "Team Member", role: "Marketing Head", department: "MBA", initials: "TM" },
];

const departments = [
  {
    name: "Technical",
    members: [
      { name: "Member Name", role: "Lead", initials: "MN" },
      { name: "Member Name", role: "Developer", initials: "MN" },
      { name: "Member Name", role: "Developer", initials: "MN" },
      { name: "Member Name", role: "Developer", initials: "MN" },
    ],
  },
  {
    name: "Design",
    members: [
      { name: "Member Name", role: "Lead", initials: "MN" },
      { name: "Member Name", role: "Designer", initials: "MN" },
      { name: "Member Name", role: "Designer", initials: "MN" },
    ],
  },
  {
    name: "Marketing",
    members: [
      { name: "Member Name", role: "Lead", initials: "MN" },
      { name: "Member Name", role: "Coordinator", initials: "MN" },
      { name: "Member Name", role: "Coordinator", initials: "MN" },
      { name: "Member Name", role: "Coordinator", initials: "MN" },
    ],
  },
  {
    name: "Sponsorship",
    members: [
      { name: "Member Name", role: "Lead", initials: "MN" },
      { name: "Member Name", role: "Coordinator", initials: "MN" },
      { name: "Member Name", role: "Coordinator", initials: "MN" },
    ],
  },
  {
    name: "Events",
    members: [
      { name: "Member Name", role: "Lead", initials: "MN" },
      { name: "Member Name", role: "Coordinator", initials: "MN" },
      { name: "Member Name", role: "Coordinator", initials: "MN" },
      { name: "Member Name", role: "Coordinator", initials: "MN" },
    ],
  },
  {
    name: "Logistics",
    members: [
      { name: "Member Name", role: "Lead", initials: "MN" },
      { name: "Member Name", role: "Coordinator", initials: "MN" },
      { name: "Member Name", role: "Coordinator", initials: "MN" },
    ],
  },
];

const facultyAdvisors = [
  { name: "Faculty Name", designation: "Professor & HOD", department: "Computer Science", initials: "FN" },
  { name: "Faculty Name", designation: "Associate Professor", department: "Information Technology", initials: "FN" },
];
---

<BaseLayout title="Team | TechNova 2026">
  <!-- Page Header -->
  <header class="page-header">
    <div class="container-editorial">
      <p class="page-label">The People Behind</p>
      <h1 class="page-title">Meet the Team</h1>
      <p class="page-description">
        A passionate group of students and faculty working to bring you an unforgettable tech fest experience.
      </p>
    </div>
  </header>

  <!-- Faculty Advisors -->
  <section class="section">
    <div class="container-editorial">
      <h2 class="section-label">Faculty Advisors</h2>
      
      <div class="advisors-list">
        {facultyAdvisors.map((advisor) => (
          <div class="advisor-item">
            <div class="advisor-avatar">{advisor.initials}</div>
            <div class="advisor-info">
              <h3 class="advisor-name">{advisor.name}</h3>
              <p class="advisor-designation">{advisor.designation}</p>
              <p class="advisor-department">{advisor.department}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Core Team -->
  <section class="section">
    <div class="container-editorial">
      <h2 class="section-label">Core Team</h2>
      
      <div class="core-grid">
        {coreTeam.map((member) => (
          <div class="core-card">
            <div class="core-avatar">{member.initials}</div>
            <h3 class="core-name">{member.name}</h3>
            <p class="core-role">{member.role}</p>
            <p class="core-department">{member.department}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Department Teams -->
  <section class="section">
    <div class="container-editorial">
      <h2 class="section-label">Department Teams</h2>
      
      <div class="departments-list">
        {departments.map((dept) => (
          <div class="department">
            <div class="department-header">
              <h3 class="department-name">{dept.name}</h3>
              <span class="department-count">{dept.members.length} members</span>
            </div>
            
            <div class="members-grid">
              {dept.members.map((member) => (
                <div class="member-item">
                  <div class="member-avatar">{member.initials}</div>
                  <div class="member-info">
                    <p class="member-name">{member.name}</p>
                    <p class="member-role">{member.role}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Join CTA -->
  <section class="section">
    <div class="container-editorial">
      <div class="cta-block">
        <p class="cta-badge">We're hiring volunteers!</p>
        <h2 class="cta-title">Want to be part of TechNova?</h2>
        <p class="cta-description">
          We're looking for passionate individuals to join our team.
        </p>
        <div class="cta-actions">
          <a href="#" class="btn-primary">Apply as Volunteer</a>
          <a href="mailto:team@technova.edu" class="btn-outline">Contact Team</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Page Header */
  .page-header {
    padding: 8rem 1.5rem 3rem;
  }

  .page-label {
    font-size: 0.6875rem;
    font-weight: 500;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--color-accent-editorial);
    margin-bottom: 1rem;
  }

  .page-title {
    font-size: clamp(2.5rem, 6vw, 3.5rem);
    font-weight: 600;
    letter-spacing: -0.02em;
    margin-bottom: 1rem;
  }

  .page-description {
    font-size: 1.0625rem;
    color: var(--color-text-muted);
    max-width: 540px;
    line-height: 1.6;
  }

  /* Section */
  .section {
    padding: 3rem 1.5rem;
  }

  .section-label {
    font-size: 0.6875rem;
    font-weight: 500;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--color-text-dim);
    margin-bottom: 1.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--color-border);
  }

  /* Faculty Advisors */
  .advisors-list {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .advisor-item {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .advisor-avatar {
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    font-family: var(--font-display);
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-accent-editorial);
  }

  .advisor-name {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.125rem;
  }

  .advisor-designation {
    font-size: 0.8125rem;
    color: var(--color-accent-editorial);
    margin-bottom: 0.125rem;
  }

  .advisor-department {
    font-size: 0.75rem;
    color: var(--color-text-dim);
  }

  /* Core Team */
  .core-grid {
    display: grid;
    gap: 1px;
    background: var(--color-border);
    border: 1px solid var(--color-border);
  }

  @media (min-width: 640px) {
    .core-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 768px) {
    .core-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .core-card {
    background: var(--color-bg-deep);
    padding: 2rem 1.5rem;
    text-align: center;
  }

  .core-avatar {
    width: 72px;
    height: 72px;
    margin: 0 auto 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-accent-editorial);
  }

  .core-name {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .core-role {
    font-size: 0.8125rem;
    color: var(--color-accent-editorial);
    margin-bottom: 0.25rem;
  }

  .core-department {
    font-size: 0.6875rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--color-text-dim);
  }

  /* Department Teams */
  .departments-list {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .department-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 1rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--color-border);
  }

  .department-name {
    font-size: 1.125rem;
    font-weight: 600;
  }

  .department-count {
    font-size: 0.75rem;
    color: var(--color-text-dim);
  }

  .members-grid {
    display: grid;
    gap: 0.75rem;
  }

  @media (min-width: 640px) {
    .members-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 768px) {
    .members-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .member-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem;
    border: 1px solid var(--color-border);
    transition: border-color 0.2s ease;
  }

  .member-item:hover {
    border-color: var(--color-border-hover);
  }

  .member-avatar {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-surface);
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-text-muted);
    flex-shrink: 0;
  }

  .member-name {
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 0.125rem;
  }

  .member-role {
    font-size: 0.6875rem;
    color: var(--color-text-dim);
  }

  /* CTA Block */
  .cta-block {
    padding: 3rem 2rem;
    border: 1px solid var(--color-border);
    text-align: center;
  }

  .cta-badge {
    display: inline-block;
    padding: 0.375rem 0.75rem;
    margin-bottom: 1rem;
    font-size: 0.6875rem;
    font-weight: 500;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    border: 1px solid var(--color-border);
    color: var(--color-text-muted);
  }

  .cta-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .cta-description {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
  }

  .cta-actions {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.75rem;
  }
</style>
