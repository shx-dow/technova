---
import BaseLayout from "../layouts/baseLayout.astro";
---

<BaseLayout title="Map | TechNova 2026">
  <header class="page-header">
    <div class="container-editorial">
      <p class="page-label">Find Your Way</p>
      <h1 class="page-title">Venue Map</h1>
      <p class="page-description">
        Locate the TechNova 2026 venue and plan your journey to the event.
      </p>
    </div>
  </header>

  <section class="section">
    <div class="container-editorial">
      <div class="location-grid">
        <div class="location-info">
          <h2 class="section-label">Venue Location</h2>
          
          <div class="address-block">
            <h3 class="address-title">The ICFAI University, Jaipur Campus</h3>
            <p class="address-text">
              Agra Road, Jaipur,<br />
              Rajasthan - 302031, India
            </p>
          </div>
          
          <div class="distances">
            <p><strong>Airport:</strong> ~20 km (40 mins)</p>
            <p><strong>Railway Station:</strong> ~15 km (35 mins)</p>
            <p><strong>Bus Stand:</strong> ~15 km (35 mins)</p>
          </div>
          
          <a href="https://maps.app.goo.gl/eSYk8U8vadEuUMdW8" class="directions-link">Get Directions on Google Maps</a>
        </div>
        
        <div class="map-placeholder">
          <span>Map</span>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Page Header */
  .page-header {
    padding: 8rem 1.5rem 3rem;
  }

  .page-label {
    font-size: 0.6875rem;
    font-weight: 500;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--color-accent-editorial);
    margin-bottom: 1rem;
  }

  .page-title {
    font-size: clamp(2.5rem, 6vw, 3.5rem);
    font-weight: 600;
    letter-spacing: -0.02em;
    margin-bottom: 1rem;
  }

  .page-description {
    font-size: 1.0625rem;
    color: var(--color-text-muted);
    max-width: 540px;
    line-height: 1.6;
  }

  /* Section */
  .section {
    padding: 3rem 1.5rem;
  }

  .section-label {
    font-size: 0.6875rem;
    font-weight: 500;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--color-text-dim);
    margin-bottom: 1.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--color-border);
  }

  /* Location */
  .location-grid {
    display: grid;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .location-grid {
      grid-template-columns: 1fr 1fr;
      align-items: start;
    }
  }

  .address-block {
    margin-bottom: 1.5rem;
  }

  .address-title {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .address-text {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  .distances {
    margin-bottom: 1.5rem;
  }

  .distances p {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: 0.375rem;
  }

  .distances strong {
    color: var(--color-text);
  }

  .directions-link {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-accent-editorial);
    transition: opacity 0.2s ease;
  }

  .directions-link:hover {
    opacity: 0.8;
  }

  .map-placeholder {
    aspect-ratio: 4/3;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    font-size: 0.75rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-text-dim);
  }
</style>
